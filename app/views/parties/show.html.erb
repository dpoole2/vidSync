<div class="container-fluid">
    <div class="row"><center><h1><%=@party.name%></h1></center></div>
    <div class="row">
        <div class="col-md-9">
            <center>
            <div class="video-video">
                <div class="container">
                    <video controls id="video-player" class="video-style"></video>
                </div>
            </div>
            </center>
            <div class="row">
                <div class="col-md-8"></div>
                <div class="col-md-2">
                    <i class="bi bi-person-circle"></i>
                    <label id="view_count"> View Count: 0 </label>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="chat-box">
                <div class="chat-content" id="content">
                    <center><h6>Top of Chat</h6></center>
                <hr>
                </div>
                <div class="container chat-box-input">
                        <div class="row">
                            <div class="col-md-10">
                                <input for="message" class='form-control' id='chat-input'/>
                            </div>
                            <div class="col-md-2">
                                <button id="input-button" class="btn btn-primary"> Send </button>
                            </div>
                        </div><br>
                </div>
            </div>
        </div>
    </div>
    
</div>